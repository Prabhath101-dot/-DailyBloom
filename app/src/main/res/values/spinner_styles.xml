<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Spinner Style -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:popupBackground">@color/surface_primary</item>
        <item name="android:dropDownSelector">@color/md_theme_primary</item>
    </style>
    
    <!-- Spinner Dropdown Item Style -->
    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>

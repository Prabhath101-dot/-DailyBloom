<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="How are you feeling?"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/habit_text_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseDialog"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="âœ•"
            android:textSize="16sp"
            android:textColor="@color/habit_text_secondary"
            app:cornerRadius="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp" />

    </LinearLayout>

    <!-- Mood Selector -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your mood"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/habit_text_primary"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMoodSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp" />

    <!-- Notes Section -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What influenced your mood? (Optional)"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/habit_text_primary"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="#2A2A2A"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="@color/habit_text_secondary"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="2dp"
        app:boxStrokeColor="@color/habit_text_primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMoodNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Share what's on your mind..."
            android:textColor="@color/habit_text_primary"
            android:textColorHint="@color/habit_text_secondary"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="4"
            android:minLines="3"
            android:gravity="top|start"
            android:background="@android:color/transparent" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tags Section -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add tags (Optional)"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/habit_text_primary"
        android:layout_marginBottom="12dp" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxTagSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:flexWrap="wrap"
        app:alignItems="flex_start"
        app:justifyContent="flex_start">

        <!-- Tags will be added dynamically -->

    </com.google.android.flexbox.FlexboxLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textColor="@color/habit_text_secondary"
            android:layout_marginEnd="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveMood"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Save Mood"
            android:textStyle="bold"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/habit_text_primary"
            android:textColor="@color/habit_dark_background"
            android:enabled="false"
            android:minWidth="120dp" />

    </LinearLayout>

</LinearLayout>

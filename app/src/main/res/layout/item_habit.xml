<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/habit_card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="0dp">

        <!-- Liquid Progress Background -->
        <com.example.moodflow.ui.LiquidProgressView
            android:id="@+id/liquidProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Content Overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Left: Percentage and Habit Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52%"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvHabitName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meditate"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Center: Progress Counter with Label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/tvProgressCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/30"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/progress_counter_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp" />

                <TextView
                    android:id="@+id/tvProgressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:alpha="0.8"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Right: Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Edit Menu -->
                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_menu"
                    android:tint="@android:color/white"
                    android:layout_marginEnd="8dp" />

                <!-- Plus Button -->
                <ImageView
                    android:id="@+id/btnPlus"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/circle_background_yellow"
                    android:padding="10dp"
                    android:src="@drawable/ic_plus"
                    android:tint="@android:color/black" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>

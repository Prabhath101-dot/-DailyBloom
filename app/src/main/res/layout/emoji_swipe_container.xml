<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How are you feeling today?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/habit_text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- ViewPager2 for Emoji Cards -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerEmojis"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginBottom="16dp" />


    <!-- Optional Reason Input (initially hidden) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutMoodReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/habit_text_secondary"
        app:hintTextColor="@color/habit_text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMoodReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add a reason (optional)"
            android:inputType="textMultiLine"
            android:lines="2"
            android:maxLines="3"
            android:textColor="@color/habit_text_primary"
            android:textColorHint="@color/habit_text_secondary" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveMood"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save Mood"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="24dp"
            app:backgroundTint="#4ECDC4"
            android:textColor="@android:color/white"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>

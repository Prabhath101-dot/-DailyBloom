<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/habit_dark_background">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How are you feeling?"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/habit_text_primary"
                    android:gravity="start"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvMonthTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="December 2025"
                    android:textSize="16sp"
                    android:textColor="@color/habit_text_secondary"
                    android:gravity="start" />

            </LinearLayout>

            <!-- Emoji Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:background="@drawable/mood_card_gradient_background"
                app:strokeColor="#2E7D32"
                app:strokeWidth="1dp">

                <include layout="@layout/emoji_swipe_container" />

            </com.google.android.material.card.MaterialCardView>


            <!-- Recent Mood Log Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mood History"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/habit_text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Recent Moods RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecentMoods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_recent_mood" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_plus"
        app:backgroundTint="#4ECDC4"
        app:tint="@android:color/white"
        app:elevation="12dp"
        app:fabSize="normal"
        app:rippleColor="#FFFFFF"
        android:visibility="gone" />

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNavBar"
        layout="@layout/bottom_nav_bar" />

    <!-- Modal Overlay (initially hidden) -->
    <View
        android:id="@+id/modalOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- Mood Entry Modal -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/moodEntryModal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:layout_marginBottom="100dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="#1E1E1E"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Modal Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="How are you feeling?"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/habit_text_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCloseModal"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="âœ•"
                    android:textSize="18sp"
                    android:textColor="@color/habit_text_secondary"
                    app:cornerRadius="24dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

            </LinearLayout>

            <!-- Mood Selector -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your mood"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/habit_text_primary"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMoodSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- Notes Section -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes (optional)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/habit_text_primary"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/habit_text_secondary"
                app:hintTextColor="@color/habit_text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMoodNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="What influenced your mood today?"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLines="5"
                    android:textColor="@color/habit_text_primary"
                    android:textColorHint="@color/habit_text_secondary" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tags Section -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/habit_text_primary"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveMoodEntry"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Mood"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:backgroundTint="#4ECDC4"
                android:textColor="@android:color/white"
                android:enabled="false" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:layout_columnWeight="1"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="?android:attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true">

    <!-- Mood Emoji or Empty Circle -->
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp">

        <!-- Empty Circle Background -->
        <View
            android:id="@+id/emptyCircle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background_green"
            android:backgroundTint="#333333"
            android:alpha="0.3" />

        <!-- Mood Emoji -->
        <TextView
            android:id="@+id/tvMoodEmoji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ðŸ˜€"
            android:textSize="24sp"
            android:gravity="center"
            android:visibility="gone" />

        <!-- Plus Icon for Empty Days -->
        <TextView
            android:id="@+id/tvPlusIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="16sp"
            android:textColor="@color/habit_text_secondary"
            android:gravity="center"
            android:alpha="0.5" />

    </FrameLayout>

    <!-- Day Number -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDayNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="10sp"
        android:textColor="@color/habit_text_secondary"
        android:gravity="center" />

</LinearLayout>

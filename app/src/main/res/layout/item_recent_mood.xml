<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <!-- Main Content Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#1E1E1E"
        app:strokeColor="#333333"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Date Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvMoodDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/habit_text_primary" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvMoodDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MON"
                    android:textSize="12sp"
                    android:textColor="@color/habit_text_secondary" />

            </LinearLayout>

            <!-- Mood Emoji -->
            <TextView
                android:id="@+id/tvMoodEmoji"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ðŸ˜€"
                android:textSize="28sp"
                android:gravity="center"
                android:layout_marginEnd="16dp" />

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Mood Name and Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvMoodName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Happy"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/habit_text_primary" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvMoodTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2:30 PM"
                        android:textSize="12sp"
                        android:textColor="@color/habit_text_secondary" />

                </LinearLayout>

                <!-- Notes Preview -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvMoodNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Had a great workout session and feeling energized!"
                    android:textSize="14sp"
                    android:textColor="@color/habit_text_secondary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Delete Button (Hidden by default) -->
    <LinearLayout
        android:id="@+id/layoutDeleteButton"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#FF4444"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:tint="@android:color/white" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>